  "validation_rules": [
    {
      "id": "R1",
      "description": "Alter muss im gültigen Bereich liegen",
      "expression": "v2 >= 18 AND v2 <= 99 OR v2 = -1",
      "affected_variables": ["v2"]
    },
    {
      "id": "R2",
      "description": "Vertrauen muss im Skalenbereich liegen",
      "expression": "v11 >= 0 AND v11 <= 10 OR v11 IN (-1, -8)",
      "affected_variables": ["v11"]
    }
  ]
