        { "value": 1, "label": "Vollzeit erwerbstätig" },
        { "value": 2, "label": "Teilzeit erwerbstätig" },
        { "value": 3, "label": "arbeitslos" },
        { "value": 4, "label": "in Ausbildung" },
        { "value": 5, "label": "Hausfrau/Hausmann" },
        { "value": 6, "label": "im Ruhestand" }
