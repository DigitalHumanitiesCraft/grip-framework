  "text_flow": [
    { "id": 1, "line": 354, "content": "Habe nun, ach! Philosophie," },
    { "id": 2, "line": 355, "content": "Juristerei und Medizin," },
    { "id": 3, "line": 356, "content": "Und leider auch Theologie" },
    { "id": 4, "line": 357, "content": "Durchaus studiert, mit heißem Bemühn." },
    { "id": 5, "line": 358, "content": "Da steh ich nun, ich armer Tor!" },
    { "id": 6, "line": 359, "content": "Und bin so klug als wie zuvor;" },
    { "id": 7, "line": 360, "content": "Heiße Magister, heiße Doktor gar" },
    { "id": 8, "line": 361, "content": "Und ziehe schon an die zehen Jahr" }
